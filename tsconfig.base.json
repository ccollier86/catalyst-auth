{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@catalyst-auth/authentik-client": [
        "packages/authentik-client/src/index.ts"
      ],
      "@catalyst-auth/cache-memory": [
        "packages/cache-memory/src/index.ts"
      ],
      "@catalyst-auth/cache-redis": [
        "packages/cache-redis/src/index.ts"
      ],
      "@catalyst-auth/contracts": [
        "packages/contracts/src/index.ts"
      ],
      "@catalyst-auth/data-postgres": [
        "packages/data-postgres/src/index.ts"
      ],
      "@catalyst-auth/forward-auth": [
        "packages/forward-auth/src/index.ts"
      ],
      "@catalyst-auth/key-memory": [
        "packages/key-memory/src/index.ts"
      ],
      "@catalyst-auth/mcp-runner": [
        "packages/mcp-runner/src/index.ts"
      ],
      "@catalyst-auth/middleware": [
        "packages/middleware/src/index.ts"
      ],
      "@catalyst-auth/policy-basic": [
        "packages/policy-basic/src/index.ts"
      ],
      "@catalyst-auth/profile-memory": [
        "packages/profile-memory/src/index.ts"
      ],
      "@catalyst-auth/sdk": [
        "packages/sdk/src/index.ts"
      ],
      "@catalyst-auth/token-service": [
        "packages/token-service/src/index.ts"
      ],
      "@catalyst-auth/webhook-memory": [
        "packages/webhook-memory/src/index.ts"
      ],
      "@catalyst-auth/webhook-worker": [
        "packages/webhook-worker/src/index.ts"
      ],
      "commander": [
        "types/commander.d.ts"
      ],
      "pg": [
        "types/pg.d.ts"
      ],
      "yaml": [
        "types/yaml.d.ts"
      ],
      "node:crypto": [
        "types/node.d.ts"
      ],
      "node:fs/promises": [
        "types/node.d.ts"
      ],
      "node:path": [
        "types/node.d.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
